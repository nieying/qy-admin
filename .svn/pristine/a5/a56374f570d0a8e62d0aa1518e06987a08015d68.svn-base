@import '@styles/_mixin.scss';

.page-device {

    .warpper {
        padding: 25px;

        .ant-card {
            margin: 12px;

            .ant-card-body {
                display: flex;

                .left,
                .right {
                    flex: 1;

                    p {
                        @include flex-vertical;
                        img {
                            width: 16px;
                            height: 16px;
                            margin-right: 5px;
                        }
                    }

                    div {
                        font-size: 30px;
                        color: rgba(0, 0, 0, 0.85);
                        margin-bottom: 33px;
                    }
                }

                .ant-input {
                    position: absolute;
                    top: 15px;
                    width: 60%;
                }
            }
        }
    }
}