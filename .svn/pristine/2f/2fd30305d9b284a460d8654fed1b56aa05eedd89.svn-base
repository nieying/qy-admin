@import '@styles/_mixin.scss';

.page-home {
    .top {
        display: flex;
        margin-bottom: 25px;

        .left {
            flex: 1;
        }

        .right {
            margin-left: 25px;
            flex: 2;
        }

        .left,
        .right {
            background: white;
            height: 460px;

            h3 {
                height: 67px;
                @include flex-vertical;
                font-size: 20px;
                border-bottom: 1px solid #E8E8E8;
                padding-left: 25px;
            }

            .school-pie,
            .class-bar {
                .echarts-for-react {
                    height: 380px !important;
                }
            }
        }
    }

    .bottom {
        padding: 18px 24px 24px 32px;
        background: white;

        h3 {
            font-size: 21px;
            margin-bottom: 34px;
        }

        .ant-form {
            display: flex;

            .ant-form-item {
                flex: 1;

                .ant-input,
                .ant-select {
                    width: 150px;
                }

                .ant-btn:last-child {
                    margin-left: 10px
                }
            }
        }

        .table-info {
            display: flex;
            margin: 34px 0 44px 0;

            div.item {
                flex: 1;
                @include flex-center;

                .left {
                    flex: 1;
                    @include flex-center;
                    flex-flow: column;
                }

                .right {
                    flex: 1;

                    .echarts-for-react {
                        width: 150px !important;
                        height: 150px !important;
                    }
                }

                .attr {
                    color: rgba(0, 0, 0, 0.45);
                }

                .value {
                    font-size: 32px;
                    font-family: HelveticaNeue;
                    color: rgba(0, 0, 0, 0.85);
                }
            }


            div.item:first-child {
                flex-flow: column;
            }

            div.item:not(:last-child) {
                border-right: 1px solid #E8E8E8;
            }
        }

        .table {
            .ant-table {
                margin-top: 16px;
            }
        }
    }
}