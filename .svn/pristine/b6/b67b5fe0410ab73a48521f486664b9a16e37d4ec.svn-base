import React, { Component } from "react";
import ReactEcharts from "echarts-for-react";
import { jsNum } from '@utils/constants'


class ClassBarChart extends Component {

    constructor(props) {
        super(props);
        this.option = {
            tooltip: {
                trigger: 'axis'
            },
            legend: {
                show: true,
                right: jsNum(60),
                itemWidth: jsNum(14),
                itemHeight: jsNum(10)
            },
            grid: {
                top: jsNum(60),
                left: jsNum(40),
                bottom: jsNum(60),
                right: jsNum(40),
            },
            xAxis: {
                type: 'category',
                offset: jsNum(15),
                axisLabel: {
                    color: "rgba(0,0,0,0.65)",
                    fontSize: jsNum(16)
                },
                axisLine: {
                    lineStyle: {
                        color: "#D9D9D9",
                        width: jsNum(1)
                    }
                },
            },
            yAxis: {
                type: "value",
                axisTick: {
                    show: false
                },
                axisLabel: {
                    color: "rgba(0,0,0,0.65)",
                    fontSize: jsNum(16)
                },
                axisLine: {
                    show: false
                },
                splitLine: {
                    show: true,
                    lineStyle: {
                        type: "dashed",
                        color: "#D9D9D9",
                        width: jsNum(1),
                    }
                }
            },
            series: [
                {
                    name: '左眼',
                    type: 'line',
                    barWidth: jsNum(20),
                    itemStyle: {
                        normal: {
                            color: '#1890FF'
                        }
                    },
                },
                {
                    name: '右眼',
                    type: 'line',
                    barWidth: jsNum(20),
                    itemStyle: {
                        normal: {
                            color: '#2FC25B'
                        }
                    },
                }
            ]
        };

    }


    componentDidMount() {
        let myChart = this.echarts.getEchartsInstance();
        myChart.setOption({
            xAxis: {
                data: ["2018.1.15", "2018.2.15", "2018.3.15", "2018.4.15", "2018.5.15", "2018.6.15", "2018.7.15"],
            },
            series: [{
                data: [0.2, 0.4, 0.34, 0.5, 0.7, 1, 1.3],
            }, {
                data: [0.1, 0.6, 0.8, 0.3, 1.7, 1.1, 0.9],
            }]
        });
    }

    render() {
        return (
            <div className="class-bar">
                <ReactEcharts
                    option={this.option}
                    ref={e => {
                        this.echarts = e;
                    }}
                />
            </div>
        );
    }
}

export default ClassBarChart;
