@import '@styles/_mixin.scss';

.page-look-student {
    .warpper {
        margin: 24px;
        display: flex;
    }

    .student-card,
    .student-tab {
        background: white;
        border-radius: 2px;
    }

    .student-card {
        width: 35%;
        padding: 64px 32px 40px 32px;

        h1 {
            font-size: 30px;
            color: rgba(0, 0, 0, 0.85);
            text-align: center;
        }

        .one {
            display: flex;

            div {
                flex: 1;
                display: flex;
                flex-flow: column;
                align-items: center;
            }

            div:not(:last-child) {
                border-right: 1px solid #E9E9E9;
            }

            h5 {
                font-size: 18px;
                color: rgba(0, 0, 0, 0.65);
            }

            p {
                color: rgba(0, 0, 0, 0.25);
            }
        }

        .two {
            margin: 30px 0;
            padding: 30px 0;
            border-top: 1px solid #E9E9E9;
            border-bottom: 1px solid #E9E9E9;
            display: flex;
            flex-flow: column;

            .item {
                display: flex;
                justify-content: space-between;
                line-height: 36px;
            }
        }

        .three {
            .item {
                line-height: 40px;
            }
        }

    }

    .student-tab {
        width: 65%;
        margin-left: 24px;

        .ant-tabs {
            .result {
                margin-bottom: 10px;
            }

            .ant-tabs-nav {
                font-size: 20px;
                padding-left: 22px;
            }

            .ant-tabs-nav .ant-tabs-tab {
                padding: 0.19rem 0.16rem;
            }

            .ant-tabs-content {
                height: calc(100% - 68px);

                .ant-tabs-tabpane {
                    padding: 25px;
                }
            }
        }
    }
}


.page-edit-student {
    .warpper {
        margin: 24px;
        background: white;
        padding: 24px 32px;

        .ant-form {
            .caozuo {
                padding-top: 36px;
                padding-left: 20px !important;

                .anticon-wechat {
                    color: #1890FF;
                    margin-left: 24px;
                }
            }

            h4 {
                font-size: 16px;
                color: rgba(0, 0, 0, 0.85);
            }
        }
    }
}